<Window x:Class="Project.View.EmailVerificationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Project.View"
         xmlns:viewModel="clr-namespace:Project.ViewModels" xmlns:customcontrols="clr-namespace:Project.CustomControls"
        
        mc:Ignorable="d"
        Title="Login" Height="700" Width="1238"
         WindowStyle="None"
         ResizeMode="NoResize"
         WindowStartupLocation="CenterScreen"

         TextElement.Foreground="{DynamicResource MaterialDesignBody}"
         Background="{x:Null}"
        AllowsTransparency="True">

   

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>


    <Border>
        <Border.Background>
            <ImageBrush ImageSource="/img/betterbg.png"
                          Stretch="None"/>
        </Border.Background>
        <Border BorderThickness="0">
            <!--BORDER-->
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">

                    <GradientStop Color="#FF282A37" Offset="0"/>
                    <GradientStop Color="#282a37" Offset="0.5"/>
                    <GradientStop Color="#99282a37" Offset="1"/>
                    <!--<GradientStop Color="#282A37" Offset="0"/>
                    <GradientStop Color="#4d6cd1" Offset="0.5"/>
                    <GradientStop Color="White" Offset="1"/>-->
                </LinearGradientBrush>
            </Border.BorderBrush>


            <Border.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                    <GradientStop Color="#FF282a37" Offset="0.5"/>
                    <GradientStop Color="#282a37" Offset="0.4"/>
                    <GradientStop Color="#99282a37" Offset="0"/>
                    <!--<GradientStop Color="#7493fa" Offset="0" />
                        <GradientStop Color="#3b5abf" Offset="0.4" />
                        <GradientStop Color="#282A37" Offset="0.5"/>-->
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>


                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>

                    <Button 
                            Command="{Binding DataContext.GologinCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Left"
                            FontSize="18" FontWeight="SemiBold"
                            FontFamily="Calibri"
                            Grid.Column="1" Margin="0,5,0,0"
                            Padding="0"
                            Foreground="#4C4E5D" 
                            Cursor="Hand">
                                <TextBlock 
                            Text="Login" FontSize="18" FontWeight="SemiBold"
                            Padding="0"
                            VerticalAlignment="Top" />  
                    </Button>


                    <Button 
                            Command="{Binding DataContext.GoHomeCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Left"
                            FontSize="12"
                            FontFamily="Calibri"
                            Grid.Column="1" Grid.ColumnSpan="2" Margin="151,5,0,0"
                            Padding="0"
                            Foreground="#4C4E5D" 
                            Cursor="Hand">
                                    <TextBlock 
                            Text="Home" FontSize="18" FontWeight="SemiBold"
                            Padding="0"
                            VerticalAlignment="Top" />                  
                    </Button>

                    
                    <materialDesign:PopupBox
                                            Grid.Column="3"
                                            PlacementMode="RightAndAlignBottomEdges"
                                            StaysOpen="False" 
                                            Foreground="#4C4E5D" Width="41" RenderTransformOrigin="-0.073,0.474" Grid.ColumnSpan="2" Margin="547,10,0,0">

                        <StackPanel>
                            <StackPanel
                                                    Margin="16 10 0 6"
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                <TextBlock VerticalAlignment="Center" Text="Dark Mode"/>
                                <ToggleButton Cursor="Hand" ToolTip="Enable Dark Mode" Margin="12 0 8 0" x:Name="themeToggle" IsChecked="{Binding IsDarktheme}" Click="toggleTheme"/>
                            </StackPanel>
                            <Button ToolTip="Having trouble logging in?" Margin="0 8 0 0" Content="Help me" />
                            <Button x:Name="button_exit" ToolTip="Close app" Content="Exit" Click="exitApp" />
                            <Button x:Name="button_minimize" ToolTip="Minimize" Content="Minimize Window" Click="click_Minimize"/>
                        </StackPanel>

                    </materialDesign:PopupBox>
                </Grid>


                
                
                

                <StackPanel
                    Width="619"
                    Orientation="Vertical"
                    Margin="0,100,0,-655" HorizontalAlignment="Left">

               
                   



                    <TextBlock Text="mail"
                               Foreground="#8d909f"
                               FontSize="18" FontWeight="Medium" FontFamily="Corbel"
                               Margin="0 100 315 5"
                               HorizontalAlignment="Center"  />

                    <TextBox  x:Name="tf_mail"
                              Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                              FontSize="18" FontWeight="Medium" FontFamily="Corbel"
                              Foreground="White"
                              CaretBrush="Wheat"
                              BorderThickness="0 0 0 2"
                              BorderBrush="#8d909f"
                              Width="360"  Height="25"
                              Margin="0 0 0 0" 
                              Padding="20,0,0,0" >
                        <TextBox.Background >

                            <ImageBrush ImageSource="/img/user.png"
                                           
                                            Stretch="None"
                                            AlignmentX="Left"/>
                        </TextBox.Background>

                    </TextBox>

                    <TextBlock Text="{Binding StatusMessage}" 
                               FontSize="18" 
                               Foreground="#8d909f" 
                               Margin="0,5,0,0"
                               FontWeight="Medium" FontFamily="Corbel"
                               HorizontalAlignment="Center"/>




                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,15,130,0"/>


                    <Button x:Name="button_send"
                            Command="{Binding SendEmailCommand}"
                            Margin="0 5 0 0"
                            Height="50" Width="300"
                            FontSize="18"
                            Content="send"
                            Foreground="White"
                            materialDesign:ShadowAssist.ShadowDepth="Depth0" >

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#1a8aec"/>
                                <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="25"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#7cbbf2" BlurRadius="30" ShadowDepth="5" Opacity="0.5" Direction="270"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#409ff2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="260" Height="30"
                                        CornerRadius="15"
                                        Background="{TemplateBinding Background}">
                                    <Grid>
                                        <ContentPresenter 
                                            Content="{TemplateBinding Content}"
                                            VerticalAlignment="Top" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <TextBlock
                            FontSize="15" FontWeight="Normal" FontFamily="Verdana"
                            Margin="150 10 150 10"
                           HorizontalAlignment="Center"
                            Width="315" Height="70"
                            TextWrapping="Wrap"
                           >
    
                            <Run Text="For student accounts, enter the full email address in the username field
                                 (example: " Foreground="#8d909f" />
                            <Run Text="utilisateur@etu.usthb.dz" Foreground="#1d77ec" />
                             <Run Text=")" Foreground="#8d909f" />


                    </TextBlock>

                    



                    <TextBlock Text="{Binding CodeStatusMessage}" 
                               FontSize="16" 
                               Foreground="Green" 
                               Margin="0,20,0,0"
                               HorizontalAlignment="Center"/>




                    <TextBlock Text="entre code"
                                Foreground="#8d909f"
                                FontSize="18" FontWeight="Medium" FontFamily="Corbel"
                                Margin="0 5 280 5"
                                 HorizontalAlignment="Center"  />

                    <TextBox  x:Name="tf_code"
                              Text="{Binding InputVerificationCode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                              FontSize="18" FontWeight="Medium" FontFamily="Corbel"
                              Foreground="White"
                              CaretBrush="Wheat"
                              BorderThickness="0 0 0 2"
                              BorderBrush="#8d909f"
                              Width="360"  Height="25"
                              Margin="0 0 0 0" 
                              Padding="20,0,0,0" >
                    </TextBox>

                    <Button x:Name="button_entrecode"
                                Command="{Binding VerifyCodeCommand}"
                                Margin="0 20 0 0"
                                Height="50" Width="300"
                                FontSize="18"
                                Content="entre code"
                                Foreground="White"
                                materialDesign:ShadowAssist.ShadowDepth="Depth0" >
                        
                        

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#1a8aec"/>
                                <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="25"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#7cbbf2" BlurRadius="30" ShadowDepth="5" Opacity="0.5" Direction="270"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#409ff2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="260" Height="30"
                    CornerRadius="15"
                    Background="{TemplateBinding Background}">
                                    <Grid>
                                        <ContentPresenter 
                        Content="{TemplateBinding Content}"
                        VerticalAlignment="Top" HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>


                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
          >

                        <TextBlock  Text="already have an acoount?"
                                Foreground="#8d909f"
                                FontSize="18" FontWeight="Medium" FontFamily="Corbel"/>

                        <Button 
                                Command="{Binding DataContext.GologinCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalAlignment="Left"
                                FontSize="18" FontWeight="Bold" FontFamily="Corbel"
                                Padding="0"
                                Foreground="White" 
                                Margin="10,0,0,0"
                                Cursor="Hand">
                                            <TextBlock 
                                Margin="0,0,0,10"
                                Text="Login" FontSize="18" FontWeight="SemiBold"
                                Padding="0"
                                VerticalAlignment="Top" />
                        </Button>
                    </StackPanel>














                    <!--   <TextBlock Text="{Binding StatusMessage}" FontSize="20" Foreground="Blue" Margin="0,10,0,0"/>--> 







                </StackPanel>




                <StackPanel Orientation="Vertical"
                            VerticalAlignment="Center" 
                            Margin="600,200,40,-562"
                            Width="500"
           />


                <StackPanel Orientation="Vertical"
                 VerticalAlignment="Center" 
                 Margin="600,40,40,-562"
                 Width="500"
>

                    <TextBlock   Text="Access to the platform is restricted to USTHB students. Please enter your official USTHB email address to proceed."
                      Foreground="White"
                      TextWrapping="Wrap"
                      
                      FontSize="26" FontWeight="ExtraBold" FontFamily="Verdana"
                      Margin="0,0,0,15"/>

                   
                </StackPanel>


                <Image Source="/img/logoTheses.png"
                    Grid.Column="0" Margin="-44,14,1044,-17"
                           />

            </Grid>


        </Border>
    </Border>

