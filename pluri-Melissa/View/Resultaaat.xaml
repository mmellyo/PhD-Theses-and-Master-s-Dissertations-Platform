<Window x:Class="Project.View.Resultaaat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:Project.View.userControls"
        xmlns:local="clr-namespace:Project.View"
        mc:Ignorable="d"
        Title="Résultats des Thèses" Height="700" Width="1238"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Grid>
        <!-- Header -->
        <Border Background="#0093ED" Height="75" VerticalAlignment="Top">
            <TextBlock Text="Résultats des Thèses" 
                       VerticalAlignment="Center" 
                       Margin="20,0"
                       Foreground="White" 
                       FontSize="24"
                       FontFamily="Segoe UI Semibold"/>
        </Border>

        <!-- Side Navigation Panel -->
        <Border Background="#FFFFFF" Width="200" VerticalAlignment="Stretch" HorizontalAlignment="Left" >
            <StackPanel Margin="10" VerticalAlignment="Top">
                <TextBlock Text="Navigation" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                <!-- Add real buttons or navigation links as needed -->
                <Button Content="Accueil" Margin="0,5"/>
                <Button Content="Rechercher" Margin="0,5"/>
                <Button Content="Statistiques" Margin="0,5"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Margin="210,85,10,10" Background="Transparent">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding TheseService.Theses}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" Margin="10" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <uc:ThesesCard Margin="0,10" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
