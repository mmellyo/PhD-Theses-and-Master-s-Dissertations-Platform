<Window x:Class="Project.View.UserProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project.View"
                xmlns:converter="clr-namespace:Project.Utils"

        mc:Ignorable="d"
        Title="UserProfileView"  Height="700" Width="1238">
    <Window.Resources>
        <converter:ByteArrayToImageConverter x:Key="ImageConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    
    
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Column -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="temp go back to these" Command="{Binding GoToTheseCommand}" Margin="0,20,0,0"/>
        </StackPanel>

        <!-- Middle Column -->
        <StackPanel Grid.Column="1" VerticalAlignment="Top">
            <TextBlock Text="temp User Profile" HorizontalAlignment="Center" Margin="0,20,0,5" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Apprenez en plus sur notre application." HorizontalAlignment="Center" FontSize="12" Opacity="0.7"/>
        </StackPanel>

        <!-- Right Column -->
        <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Ellipse Width="100" Height="100" Stroke="Gray" StrokeThickness="2">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="{Binding user_profilepic, Converter={StaticResource ImageConverter}}" Stretch="UniformToFill"/>
                </Ellipse.Fill>
            </Ellipse>
<TextBlock Text="{Binding user_name}" FontSize="16" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding user_email}" FontSize="14" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>

</Window>

