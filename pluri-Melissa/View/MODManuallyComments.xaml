<UserControl x:Class="Project.View.MODManuallyComments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.View"
             xmlns:userControls="clr-namespace:Project.View.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1238">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <!-- Sidebar -->
        <userControls:SideBar_admin Grid.Column="0" x:Name="SideBarAdmin" Margin="0,0,0,0"/>


        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <userControls:TopBarView Grid.Column="1"/>


            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="White">
                    <TextBlock Text="Commentaire Signalés" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,0" FontFamily="Montserrat Bold" FontSize="20"/>
                </Grid>

                <Grid Grid.Row="1" Background="White">
                    <TabControl Width="Auto" Height="Auto" BorderBrush="Transparent" >
                        <TabItem Header="Tout les commentaires" FontFamily="Montserrat Medium" Cursor="Hand" Style="{DynamicResource TabItemsStyle2}" >
                            <StackPanel Orientation="Vertical">
                                <Border Margin="0,15,0,0" Background="#7DD8FF" CornerRadius="4" Height="30" Width="982">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                        <Border Margin="24,0,60,0" CornerRadius="2" Width="40" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" >
                                            <Border.Style>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#0093ED"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Height="16">
                                                <TextBlock Text="Nom" FontSize="12"  FontFamily="Montserrat SemiBold" Foreground="White" VerticalAlignment="Center" Height="16" Margin="0,0,5,0"/>
                                                
                                            </StackPanel>
                                        </Border>
                                        <TextBlock Text="Contenu" FontFamily="Montserrat SemiBold" FontSize="12" Margin="0,0,70,0" Foreground="White" VerticalAlignment="Center"/>
                                        <Border Margin="24,0,105,0" CornerRadius="4" Width="105" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" >
                                            <Border.Style>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#0093ED"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Height="16">
                                                <TextBlock Text="Signales par" FontSize="12"  FontFamily="Montserrat SemiBold" Foreground="White" VerticalAlignment="Center" Height="16" Margin="0,0,0,0"/>
                                                
                                            </StackPanel>
                                        </Border>
                                        <TextBlock Text="Raison" FontFamily="Montserrat SemiBold" FontSize="12" Foreground="White" Margin="0,0,130,0" VerticalAlignment="Center" />
                                        <TextBlock Text="Message" FontFamily="Montserrat SemiBold" FontSize="12" Foreground="White" Margin="0,0,230,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Action" FontFamily="Montserrat SemiBold" FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ItemsControl ItemsSource="{Binding ModManComments}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <userControls:reportedComment Margin="0,10"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                        </TabItem>
                        
                    </TabControl>
                </Grid>
            </Grid>

        </Grid>

        <!-- Main Content -->
    </Grid>
</UserControl>
