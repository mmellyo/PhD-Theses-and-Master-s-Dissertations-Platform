<UserControl x:Class="Project.View.userControls.rechercheResultat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.View.userControls"
              Background="Transparent">
    <Grid Background="White">
        <Separator VerticalAlignment="Top" Margin="0,-4,0,0"/>
        <TextBlock Text="{Binding NomThese}" x:Name="tNom" HorizontalAlignment="Left" Margin="65,6,0,0" VerticalAlignment="Top" FontFamily="Montserrat Bold" FontSize="20" Foreground="Black" Width="975"/>
        <TextBlock Text="{Binding NomAuteur}" x:Name="aNom" HorizontalAlignment="Left" Margin="65,30,0,0"  VerticalAlignment="Top" FontFamily="Montserrat Medium" FontSize="16" Foreground="#FF9A9A9A" Width="975"/>
        <TextBlock Text="{Binding MotCles}" x:Name="mCle" HorizontalAlignment="Left" Margin="65,50,0,0"  VerticalAlignment="Top" FontFamily="Montserrat Medium" FontSize="16" Foreground="#FF9A9A9A" Width="975"/>
    </Grid>
</UserControl>
