<UserControl x:Class="Project.View.userControls.keyword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.View.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
    <Border Background="#0093ED" CornerRadius="16" Padding="10,5" Margin="5" Height="30" Width="85">
        <TextBlock Text="{Binding Keyword}" Foreground="White" FontSize="10" FontFamily="Montserrat SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Border>
</UserControl>
