<UserControl x:Class="Project.View.userControls.UsersComment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.View.userControls"
             xmlns:converter="clr-namespace:Project.Utils"

             mc:Ignorable="d" 
                      d:DesignHeight="100" d:DesignWidth="380"
         Background="Transparent">

    <UserControl.Resources>
        <converter:ByteArrayToImageConverter x:Key="ImageConverter"/>
    </UserControl.Resources>


    <Border Background="White"  CornerRadius="12" BorderBrush="#FF9A9A9A" BorderThickness="0.5">
        <Grid>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0" HorizontalAlignment="Left"  Height="80" Width="320">
                <Border Height="70" Width="70">
                    <Ellipse Width="60" Height="60" Stroke="Gray" StrokeThickness="1">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding user_profilepic, Converter={StaticResource ImageConverter}}" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>
                <StackPanel Orientation="Vertical" Width="250" Margin="0,20,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                        FontSize="12"
                        FontFamily="Montserrat Bold"
                        Foreground="#212121"
                        TextWrapping="Wrap"
                        Width="185">
                        <Run Text="{Binding Username}"/>
                        </TextBlock>
                        <!-- ETOILES -->
                    </StackPanel>
                    <TextBlock Text="{Binding CommentText}" FontSize="12" FontFamily="Montserrat Medium" TextWrapping="Wrap" MaxHeight="48" MaxWidth="250"  Foreground="#212121" Height="48"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
