<UserControl x:Class="Project.View.MODcommentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Project.View"
        xmlns:userControls="clr-namespace:Project.View.userControls"
        mc:Ignorable="d"
        Height="700"
        Width="1238"
        >

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        

        <!-- Sidebar -->
        <userControls:SideBar_admin Grid.Column="0" x:Name="SideBarAdmin" Margin="0,0,0,0"/>


        <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <userControls:TopBarView Grid.Column="1"/>


                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500*"/>

                    </Grid.ColumnDefinitions>
                    <ScrollViewer x:Name="myrecommended"
                        Background="White"
                      Grid.Column="0"
                      VerticalScrollBarVisibility="Hidden">
                        <ItemsControl ItemsSource="{Binding ModComments}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                <userControls:ModComment HorizontalAlignment="Center" Width="800" Margin="10,10"/>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>

            </Grid>

            <!-- Main Content -->
        </Grid>
</UserControl>
