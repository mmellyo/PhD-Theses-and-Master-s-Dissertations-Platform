<Window x:Class="Project.View.MODcommentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Project.View"
        xmlns:userControls="clr-namespace:Project.View.userControls"
        DataContext="{Binding MODCommentViewModel, Source={StaticResource ViewModelLocator}}"
        mc:Ignorable="d"
        Title="MODcommentView"
        Height="700"
        Width="1238"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <!-- TopBar -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <userControls:TopBarView Grid.ColumnSpan="2" Grid.Row="0" />

        <!-- Sidebar -->
        <userControls:SideBar_admin Grid.RowSpan="2" Grid.Column="0" x:Name="SideBarAdmin" Margin="0,0,0,0"/>

        <!-- Main Content -->
        <Border Grid.Row="1" Grid.Column="1" Background="#f0f0f0" Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FlaggedComments}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,10" Padding="15" Background="White" CornerRadius="10" BorderThickness="1" BorderBrush="#DDD" >
                                <DockPanel LastChildFill="False">

                                    <!-- Left section: username + comment -->
                                    <StackPanel DockPanel.Dock="Left" Width="550" Margin="0,0,10,0">
                                        <TextBlock Text="{Binding Username}" FontWeight="Bold" FontSize="14" Foreground="#333"/>

                                        <Button 
                                            Command="{Binding DataContext.MODDisplayTheseCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding TheseId}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Padding="0"
                                            HorizontalAlignment="Left"
                                            Cursor="Hand">
                                            <TextBlock 
                                                Text="{Binding TheseId, StringFormat='These number: {0}'}"
                                                FontSize="12"
                                                Foreground="#007ACC" />
                                        </Button>

                                        <TextBlock Text="{Binding CommentText}" TextWrapping="Wrap" Margin="0,5,0,0" Foreground="#444"/>
                                    </StackPanel>

                                    <!-- Right section: action buttons -->
                                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" >
                                        <Button Content="Approve" 
                                                Command="{Binding ApproveCommand}" 
                                                Width="80"
                                                Background="#77d785"
                                                Foreground="White"
                                                FontWeight="Bold"
                                                BorderThickness="0"
                                                Padding="5,2"
                                                Margin="0,0,10,0"/>

                                        <Button Content="Deny" 
                                                Command="{Binding DenyCommand}" 
                                                Width="80"
                                                Background="#d2666f"
                                                Foreground="White"
                                                FontWeight="Bold"
                                                BorderThickness="0"
                                                Padding="5,2"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
