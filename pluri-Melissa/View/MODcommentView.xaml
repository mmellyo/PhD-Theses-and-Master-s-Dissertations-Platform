<Window x:Class="Project.View.MODcommentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"

        xmlns:local="clr-namespace:Project.View" 
        xmlns:userControls="clr-namespace:Project.View.userControls" DataContext="{Binding MODCommentViewModel, Source={StaticResource ViewModelLocator}}"
        
        mc:Ignorable="d"
        Title="MODcommentView" Height="700" Width="1238"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">



    <Grid>
        
            <StackPanel Background="#0093ED" Height="115" VerticalAlignment="Top">

            </StackPanel>

        <userControls:SideBar_admin x:Name="SideBarAdmin" Grid.Column="0"  Margin="0,0,970,0" DataContext="{Binding SideBarViewModel, Source={StaticResource ViewModelLocator}}" />

        <!-- <userControls:SideBar_admin x:Name="SideBarAdmin" Grid.Column="0" Margin="0,0,970,0" />-->

        <StackPanel Background="White" Width="300" HorizontalAlignment="Left">

            </StackPanel>
            <Grid Margin="300,115,0,0" Background="#f0f0f0">
                <Grid Background="#f0f0f0">


                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding FlaggedComments}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="10" Padding="10" BorderThickness="1" BorderBrush="Gray" CornerRadius="5">
                                        <DockPanel>
                                            <StackPanel DockPanel.Dock="Left" Width="500">
                                                <TextBlock Text="{Binding Username}" FontWeight="Bold" />

                                            <Button 
                                                    Command="{Binding DataContext.MODDisplayTheseCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                    CommandParameter="{Binding TheseId}"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    HorizontalAlignment="Left"
                                                    FontSize="12"
                                                    Margin="0,0,10,0"
                                                    Padding="0"
                                                    Foreground="Black"
                                                    Cursor="Hand">
                                                <TextBlock 
                                                    Text="{Binding TheseId, StringFormat='these number : {0}'}" 
                                                    Margin="0"
                                                    Padding="0"
                                                    VerticalAlignment="Center" />
                                            </Button>

                                            <TextBlock Text="{Binding CommentText}" TextWrapping="Wrap" />
                                                
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0,0,0">
                                            <Button Content="Approve" Command="{Binding ApproveCommand}" Margin="0,0,10,0"/>
                                                <Button Content="Deny" Command="{Binding DenyCommand}" />
                                            </StackPanel>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>



                </Grid>
            </Grid>
        </Grid>

    </Window>

